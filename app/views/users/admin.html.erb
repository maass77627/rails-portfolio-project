<h3>Books</h3>
<% if !@books.empty? %>
  <table border="1">
    <thead>
      <td>ID</td>
      <td>Title</td>
      <td>Author</td>
      <td>Year</td>
      <td>Fiction?</td>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
        <td><%= book.id %></td>
        <td><%= link_to(book.title, book_path(book.id)) %></td>
        <td><%= book.author %></td>
        <td><%= book.year %></td>
        <% if book.fiction %>
          <td>Fiction</td>
        <% else %>
          <td>Non-Fiction %></td>
        <% end %>
        <td><%= link_to("Edit Book", edit_book_path(book.id)) %></td>
        <td><%= link_to("Delete Book", book, method: :delete ) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<h3>Users</h3>
<table border="1">
  <thead>
    <td>ID</td>
    <td>User</td>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= link_to("Delete User", user, method: :delete) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Reviews</h3>
<% if !@reviews.empty? %>
  <table border="1">
    <thead>
      <td>Book</td>
      <td>User</td>
      <td>Summary</td>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
        <td><%= review.book_id %></td>
        <td><%= review.user_id %></td>
        <td><%= review.summary %></td>
        <td><%= link_to("Delete Review", review, method: :delete ) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

